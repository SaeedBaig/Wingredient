# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 99

# 4 space indentation in Python
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# 2 space indentation in JS
[**.{js,html,sql}]
charset = utf-8
indent_style = space
indent_size = 2

# Tab indentation in Makefile (no size specified)
[Makefile]
indent_style = tab
